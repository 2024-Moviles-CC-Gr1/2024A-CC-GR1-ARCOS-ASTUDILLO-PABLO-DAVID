<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"/>

    <TextView
        android:id="@+id/superficieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Superficie"
        android:layout_below="@id/nombreTextView"/>

    <TextView
        android:id="@+id/independienteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Independiente?"
        android:layout_below="@id/superficieTextView"/>

    <TextView
        android:id="@+id/fechaFundacionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Fundación"
        android:layout_below="@id/independienteTextView"/>

    <Button
        android:id="@+id/addCiudadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Ciudad"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <RecyclerView
        android:id="@+id/ciudadesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/addCiudadButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
